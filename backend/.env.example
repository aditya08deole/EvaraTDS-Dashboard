# ThingSpeak API Configuration
# Get these from your ThingSpeak channel settings
THINGSPEAK_CHANNEL_ID=2713286
THINGSPEAK_READ_KEY=YOUR_READ_API_KEY_HERE

# Alert Thresholds
TDS_ALERT_THRESHOLD=150.0
TEMP_ALERT_THRESHOLD=35.0

# Telegram Bot Configuration (NEVER COMMIT REAL TOKENS)
# Get token from @BotFather on Telegram: https://t.me/BotFather
# Send /newbot to create a bot and receive your token
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz1234567890

# Email Configuration (Optional - using Resend)
# Get from: https://resend.com/api-keys
RESEND_API_KEY=re_123456789abcdefghijklmnop

# Alert System Configuration
ALERT_COOLDOWN_MINUTES=15
DATABASE_URL=sqlite:///./alerts.db

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:5173,https://your-app.vercel.app
